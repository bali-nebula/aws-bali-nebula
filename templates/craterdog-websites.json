{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This cloud formation template is used to setup the Crater Dog Technologiesâ„¢ websites.",
  "Resources": {
    "CloudFrontIdentity": {
      "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
      "Properties": {
        "CloudFrontOriginAccessIdentityConfig": {
          "Comment": "Unique identity that is allowed to access the S3 origin content."
        }
      }
    },
    "CraterDogAccess": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Fn::Sub": "craterdog-websites-${AWS::Region}" },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [ "", [ "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ", { "Ref": "CloudFrontIdentity" } ] ]
                }
              },
              "Action": "s3:GetObject",
              "Resource": { "Fn::Sub": "arn:aws:s3:::craterdog-websites-${AWS::Region}/*" }
            }
          ]
        }
      }
    },
    "CraterDogDomain": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": ["craterdog.net"],
          "PriceClass": "PriceClass_All",
          "Enabled": true,
          "HttpVersion": "http2",
          "DefaultRootObject": "Home.html",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:821699068808:certificate/4896433b-fa2f-414d-8eed-7396c0ab193c",
            "SslSupportMethod": "sni-only",
            "MinimumProtocolVersion": "TLSv1.2_2018"
          },
          "Origins": [
            {
              "Id": "S3Origin",
              "DomainName": "craterdog-websites-us-east-1.s3.amazonaws.com",
              "OriginPath": "/craterdog",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Join": [ "/", [ "origin-access-identity", "cloudfront", { "Ref": "CloudFrontIdentity" } ] ]
                }
              }
            }
          ],
          "DefaultCacheBehavior": {
            "TargetOriginId" : "S3Origin",
            "ViewerProtocolPolicy" : "redirect-to-https",
            "AllowedMethods" : [ "HEAD", "GET" ],
            "CachedMethods" : [ "HEAD", "GET" ],
            "Compress" : true,
            "ForwardedValues" : {
              "Cookies" : {
                "Forward": "none"
              },
              "QueryString" : false
            }
          },
          "Logging": {
            "Bucket": { "Fn::Sub": "craterdog-logs-${AWS::Region}.s3.amazonaws.com" },
            "IncludeCookies" : false,
            "Prefix" : "craterdog/"
          }
        }
      }
    },
    "CraterDogRouting": {
      "Type" : "AWS::Route53::RecordSet",
      "DependsOn": [ "CraterDogDomain" ],
      "Properties" : {
        "Name": "craterdog.net.",
        "Comment" : "Route all Crater Dog Technologies website requests to the CloudFront endpoint,",
        "Type" : "A",
        "HostedZoneName" : "craterdog.net.",
        "AliasTarget" : {
          "DNSName": { "Fn::GetAtt": [ "CraterDogDomain", "DomainName" ] },
          "EvaluateTargetHealth" : false,
          "HostedZoneId" : "Z2FDTNDATAQYW2"
        }
      }
    }
  }
}
