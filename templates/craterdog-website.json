{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This cloud formation template is used to setup the Crater Dog Technologiesâ„¢ website.",
  "Resources": {
    "WebsiteBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { "Fn::Sub": "craterdog-bali-website-${AWS::Region}" },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument":"index.html",
          "ErrorDocument":"error.html"
        },
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedMethods": [
                "HEAD",
                "GET"
              ],
              "AllowedOrigins": [
                "*"
              ],
              "MaxAge": 3000
            }
          ]
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "DependsOn": [ "WebsiteBucket" ],
      "Properties": {
        "Bucket": {
          "Ref": "WebsiteBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "WebsiteBucket" }, "/*" ] ]
              }
            }
          ]
        }
      }
    },
    "CraterDogDomain": {
      "Type": "AWS::CloudFront::Distribution",
      "DependsOn": [ "WebsiteBucket" ],
      "Properties": {
        "DistributionConfig": {
          "Aliases": ["craterdog.net"],
          "PriceClass": "PriceClass_All",
          "Enabled": true,
          "HttpVersion": "http2",
          "DefaultRootObject": "index.html",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:821699068808:certificate/4896433b-fa2f-414d-8eed-7396c0ab193c",
            "SslSupportMethod": "sni-only"
          },
          "Origins": [
            {
              "Id": "S3Origin",
              "DomainName": "craterdog-bali-website-us-east-1.s3-website-us-east-1.amazonaws.com",
              "CustomOriginConfig": {
                "HTTPPort": "80",
                "HTTPSPort": "443",
                "OriginProtocolPolicy": "http-only"
              }
            }
          ],
          "DefaultCacheBehavior": {
            "TargetOriginId" : "S3Origin",
            "ViewerProtocolPolicy" : "redirect-to-https",
            "AllowedMethods" : [ "HEAD", "GET" ],
            "CachedMethods" : [ "HEAD", "GET" ],
            "Compress" : true,
            "ForwardedValues" : {
              "Cookies" : {
                "Forward": "none"
              },
              "QueryString" : false
            }
          }
        }
      }
    },
    "CraterDogRouting": {
      "Type" : "AWS::Route53::RecordSet",
      "DependsOn": [ "CraterDogDomain" ],
      "Properties" : {
        "Name": "craterdog.net.",
        "Comment" : "Route all Crater Dog Technologies website requests to the CloudFront endpoint,",
        "Type" : "A",
        "HostedZoneName" : "craterdog.net.",
        "AliasTarget" : {
          "DNSName": { "Fn::GetAtt": [ "CraterDogDomain", "DomainName" ] },
          "EvaluateTargetHealth" : false,
          "HostedZoneId" : "Z2FDTNDATAQYW2"
        }
      }
    }
  }
}
